<h1>All our Flats (<%= @flats.length %>)</h1>

<div class="row">
  <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="card-index mb-3">
        <div class="card-header">
          <h5><%= flat.name %></h5>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <div class="pr-1"><i class="fa-solid fa-user-group"></i>  <%= flat.number_of_guests %></div>
            <div class="px-2"><i class="fa-solid fa-euro-sign"></i>  <%= flat.price_per_night %></div>
          </div>
        </div>
        <div class="card-body d-flex justify-content-between">
          <%= link_to "More info", flat_path(flat) %>
          <div>
            <%= link_to '<i class="fa-solid fa-pen"></i>'.html_safe, edit_flat_path(flat)%>
            <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
